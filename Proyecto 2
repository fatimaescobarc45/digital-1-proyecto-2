void setup() {
  Serial.begin(9600);

  A.attach(8);
  B.attach(7);
  C.attach(6);
  D.attach(5);
  pinMode(sw, INPUT);
  pinMode(pb1, INPUT);
  pinMode(pb2, INPUT);

}

//Modo manual
